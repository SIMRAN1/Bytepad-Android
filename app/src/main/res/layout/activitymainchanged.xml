<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.0"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="1.0"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="360dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_percent="0.0"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="307dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_percent="1.0"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="511dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline11"
                app:layout_constraintGuide_percent="0.0"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline12"
                app:layout_constraintGuide_percent="1.0"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="360dp" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline13"
                app:layout_constraintGuide_percent="0.0"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline14"
                app:layout_constraintGuide_percent="0.18"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="307dp"
                tools:layout_editor_absoluteX="0dp" />
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline14111"
                app:layout_constraintGuide_percent="0.235"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="307dp"
                tools:layout_editor_absoluteX="0dp" />
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline141"
                app:layout_constraintGuide_percent="0.30"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="307dp"
                tools:layout_editor_absoluteX="0dp" />
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline114"
                app:layout_constraintGuide_percent="0.18"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="307dp"
                tools:layout_editor_absoluteX="0dp" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline15"
                app:layout_constraintGuide_percent="1.0"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="511dp"
                tools:layout_editor_absoluteX="0dp" />
            <android.support.design.widget.AppBarLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="4sp"
                app:layout_constraintLeft_toLeftOf="@+id/guideline11"
                app:layout_constraintBottom_toTopOf="@+id/guideline14"
                app:layout_constraintTop_toTopOf="@+id/guideline13"
                app:layout_constraintRight_toLeftOf="@+id/guideline12"
                >


                <android.support.v7.widget.Toolbar
                    android:paddingTop="35sp"
                    android:paddingBottom="6sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_collapseMode="pin"



                    android:id="@+id/toolbar">
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="30sp"
                        android:src="@drawable/iconupperr"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:id="@+id/downloadbutton"

                        />
                </android.support.v7.widget.Toolbar>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5sp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_weight="0"
                            android:tint="@color/textDark"
                            android:src="@android:drawable/ic_menu_search"
                            android:layout_height="25dp" />
                        <AutoCompleteTextView
                            android:id="@+id/search_paper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Search"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:textColor="#333"
                            android:textColorHint="#666"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="25dp"
                            android:padding="3dp"
                            android:tint="@color/textDark"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:layout_weight="0"
                            android:id="@+id/ivClearSearch"
                            android:layout_height="25dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </android.support.design.widget.AppBarLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline11"
                    app:layout_constraintBottom_toTopOf="@+id/guideline141"
                    app:layout_constraintTop_toTopOf="@+id/guideline14111"
                    app:layout_constraintRight_toLeftOf="@+id/guideline12"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:id="@+id/Lineartoggle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/backtoggle"
                            android:textOff="ST1"
                            android:textOn="ST1"
                            android:gravity="center"

                            android:id="@+id/St1"
                            android:layout_weight="1"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5sp"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/st1line"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textOff="ST2"
                            android:textOn="ST2"
                            android:gravity="center"
                            android:background="@drawable/backtoggle"
                            android:id="@+id/st2"

                            android:layout_weight="1"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5sp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:id="@+id/st2line"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textOff="PUT"
                            android:textOn="PUT"
                            android:gravity="center"
                            android:background="@drawable/backtoggleselected"
                            android:id="@+id/put"
                            android:layout_weight="1"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5sp"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/putline"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textOff="UT"
                            android:textOn="UT"
                            android:gravity="center"
                            android:background="@drawable/backtoggle"
                            android:id="@+id/ut"
                            android:layout_weight="1"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5sp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:id="@+id/utline"
                            android:background="@color/colorPrimary"/>

                    </LinearLayout>
                </LinearLayout>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/recyclerEmptyView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/guideline11"
                app:layout_constraintBottom_toTopOf="@+id/guideline15"
                app:layout_constraintTop_toTopOf="@+id/guideline141"
                app:layout_constraintRight_toLeftOf="@+id/guideline12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Papers Found"
                    android:layout_centerInParent="true"
                    android:textColor="@color/textDark"

                    android:textAppearance="@android:style/TextAppearance.Large"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="10sp"
                android:id="@+id/rview"
                app:layout_constraintLeft_toLeftOf="@+id/guideline11"
                app:layout_constraintBottom_toTopOf="@+id/guideline15"
                app:layout_constraintTop_toTopOf="@+id/guideline141"
                app:layout_constraintRight_toLeftOf="@+id/guideline12"
                >

            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>
